{
  "name": "shopify-automation",
  "version": "1.0.0",
  "description": "Shopify automation tools and CLI",
  "type": "module",
  "scripts": {
    "build": "echo 'Shopify CLI ready'",
    "login": "shopify auth login",
    "logout": "shopify auth logout",
